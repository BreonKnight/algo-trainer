{
  "name": "algo-trainer",
  "private": true,
  "version": "1.0.0",
  "main": "dist-electron/main.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "preview": "vite preview",
    "electron:dev": "tsc -p electron && NODE_ENV=development electron .",
    "electron:build": "npm run build && tsc -p electron && electron-builder",
    "electron:preview": "npm run build && tsc -p electron && NODE_ENV=production electron .",
    "extract-patterns": "node scripts/extract-patterns.js",
    "create-implementations": "node scripts/create-implementations.js",
    "split-pseudocode": "tsx scripts/split-pseudocode.ts",
    "audit-patterns": "tsx src/lib/pseudocode/scripts/audit-patterns.ts",
    "validate-naming": "tsx src/components/algorithm-trainer/scripts/validate-naming.ts",
    "fix-naming": "tsx src/components/algorithm-trainer/scripts/fix-naming.ts",
    "start": "next start"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@monaco-editor/react": "^4.6.0",
    "@radix-ui/react-dialog": "^1.1.11",
    "@radix-ui/react-dropdown-menu": "^2.1.12",
    "@radix-ui/react-label": "^2.1.4",
    "@radix-ui/react-progress": "^1.1.4",
    "@radix-ui/react-select": "^2.2.2",
    "@radix-ui/react-slider": "^1.3.2",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-tabs": "^1.1.9",
    "@radix-ui/react-tooltip": "^1.2.4",
    "@types/react-beautiful-dnd": "^13.1.8",
    "canvas-confetti": "^1.9.3",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "framer-motion": "^10.16.4",
    "glob": "^11.0.2",
    "lucide-react": "^0.294.0",
    "next": "^15.3.1",
    "prism-react-renderer": "^2.4.1",
    "pyodide": "^0.27.5",
    "react": "^18.2.0",
    "react-beautiful-dnd": "^13.1.1",
    "react-dom": "^18.2.0",
    "react-hot-toast": "^2.5.2",
    "react-icons": "^5.5.0",
    "react-resizable-panels": "^2.1.9",
    "react-router-dom": "^7.5.3",
    "react-syntax-highlighter": "^15.6.1",
    "sonner": "^2.0.3",
    "tailwind-merge": "^2.6.0"
  },
  "devDependencies": {
    "@types/canvas-confetti": "^1.9.0",
    "@types/node": "^20.11.0",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@types/react-syntax-highlighter": "^15.5.13",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "@vitejs/plugin-react": "^4.0.3",
    "autoprefixer": "^10.4.21",
    "electron": "^35.2.0",
    "electron-builder": "^26.0.12",
    "eslint": "^8.45.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "postcss": "^8.5.3",
    "tailwindcss": "^3.4.17",
    "tsx": "^4.19.4",
    "typescript": "^5.0.2",
    "vite": "^6.3.2"
  },
  "build": {
    "appId": "com.breon.algotrainer",
    "productName": "Algorithm Trainer",
    "mac": {
      "category": "public.app-category.education",
      "icon": "build/icon.icns"
    },
    "win": {
      "icon": "build/icon.ico"
    },
    "linux": {
      "icon": "build/icon.png",
      "category": "Education"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "directories": {
      "buildResources": "build",
      "output": "release"
    }
  }
}
